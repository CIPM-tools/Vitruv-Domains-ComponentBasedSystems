<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="tools.vitruv.applications.pcmjava.builder.PCMJavaBuilder.id"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="tools.vitruv.applications.pcmjava.builder.PCMJavaBuilder">
         </run>
       </builder>
   </extension>

   <extension 
   	        point="org.eclipse.ui.menus">
	    <menuContribution
	    	   allPopups="false"
	    	   locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
	        <command
	        	commandId="tools.vitruv.applications.pcmjava.builder.addbuilder.commandId"
	        	style="push">
	        	<visibleWhen
                  checkEnabled="false">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
                  <iterate>
                     <not>
                        <test
                              forcePluginActivation="true"
                              property="tools.vitruv.applications.pcmjava.builder.isEnabled">
                        </test>
                     </not>
                  </iterate>
               </and>
            </visibleWhen>
	        </command>
	        <command 
	        	commandId="tools.vitruv.applications.pcmjava.builder.removebuilder.commandId"
	         	style="push">
	         	<visibleWhen
                  checkEnabled="false">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
                  <iterate>
                     <test
                           forcePluginActivation="true"
                           property="tools.vitruv.applications.pcmjava.builder.isEnabled">
                     </test>
                  </iterate>
               </and>
            </visibleWhen>
	        </command>
	    </menuContribution>
	</extension>
	
	<extension point="org.eclipse.ui.commands">
    	<command
    		 defaultHandler="tools.vitruv.applications.pcmjava.builder.PCMJavaAddBuilder" 
    		 id="tools.vitruv.applications.pcmjava.builder.addbuilder.commandId" 
    		 name="Add PCM Java Builder">
    	</command>
	    <command
	    	 defaultHandler="tools.vitruv.applications.pcmjava.builder.PCMJavaRemoveBuilder"
	    	  id="tools.vitruv.applications.pcmjava.builder.removebuilder.commandId" 
	    	  name="Remove PCM Java Builder">
	    </command>
	</extension>
	
	<extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="tools.vitruv.applications.pcmjava.builder.PCMJavaTestBuilderEnabled"
            id="tools.vitruv.applications.pcmjava.builder.PCMJavaBuilder.id"
            namespace="tools.vitruv.applications.pcmjava.builder"
            properties="isEnabled"
            type="java.lang.Object">
      </propertyTester>
   </extension>
 <extension
       point="org.eclipse.ui.startup">
    <startup
          class="tools.vitruv.applications.pcmjava.builder.BuildOnEclipseStartup">
    </startup>
 </extension>
   
  
</plugin>
