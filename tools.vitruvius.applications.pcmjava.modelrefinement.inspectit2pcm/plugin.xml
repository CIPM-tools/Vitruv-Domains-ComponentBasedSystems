<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

  <extension point="org.eclipse.ui.menus">
    <menuContribution locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
      <menu
            id="tools.vitruvius"
            label="Vitruvius">
         <command
               commandId="tools.vitruvius.casestudies.pcmjava.modelrefinement.inspectit2pcm"
               label="Enrich PCM models using InpsectIt"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menu>
    </menuContribution>
  </extension>
  
  <extension point="org.eclipse.ui.commands">
    <category
          id="tools.vitruvius.casestudies.pcmjava.modelrefinement.inspectit2pcm" name="modelrefinement.inspectit2pcm">
    </category>
    <command
          categoryId="tools.vitruvius.casestudies.pcmjava.modelrefinement.inspectit2pcm"
          defaultHandler="tools.vitruvius.casestudies.pcmjava.modelrefinement.inspectit2pcm.InspectIt2PCMHandler"
          description="Apply scm changes to files"
          id="tools.vitruvius.casestudies.pcmjava.modelrefinement.inspectit2pcm"
          name="Apply SCM Changes">
    </command>
  </extension>

</plugin>