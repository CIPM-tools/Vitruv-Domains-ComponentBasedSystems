<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="jmlMenu"
               label="JML">
            <command
                  commandId="tools.vitruvius.applications.jmljava.initializer.command.activate"
                  label="Activate Synchronization"
                  style="push">
            </command>
            <command
                  commandId="tools.vitruvius.applications.jmljava.initializer.command.deactivate"
                  label="Deactivate Synchronization"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="tools.vitruvius.applications.jmljava.initializer.command.activate"
            name="Activate Synchronization">
      </command>
      <command
            id="tools.vitruvius.applications.jmljava.initializer.command.deactivate"
            name="Deactivate Synchronization">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="tools.vitruvius.applications.jmljava.initializer.CommandState">
         <variable
               name="tools.vitruvius.applications.jmljava.initializer.command.activate.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="tools.vitruvius.applications.jmljava.initializer.ActivateHandler"
            commandId="tools.vitruvius.applications.jmljava.initializer.command.activate">
         <activeWhen>
            <with
                  variable="tools.vitruvius.applications.jmljava.initializer.command.activate.active">
               <equals
                     value="TRUE">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="tools.vitruvius.applications.jmljava.initializer.DeactivateHandler"
            commandId="tools.vitruvius.applications.jmljava.initializer.command.deactivate">
         <activeWhen>
            <with
                  variable="tools.vitruvius.applications.jmljava.initializer.command.activate.active">
               <not>
                  <equals
                        value="TRUE">
                  </equals>
               </not>
            </with>
         </activeWhen>
      </handler>
   </extension>

</plugin>
