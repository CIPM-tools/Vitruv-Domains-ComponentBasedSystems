<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="tools.vitruvius.dsls.common.ui.GenerationHandler"
            commandId="tools.vitruvius.dsls.common.ui.handler.GenerationCommand">
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Generate MIR"
            id="tools.vitruvius.dsls.common.ui.handler.GenerationCommand"
            name="Generate MIR">
      </command>
   </extension>

	  <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
			<command
         commandId="tools.vitruvius.dsls.common.ui.handler.GenerationCommand"
         label="Generate MIR"
         style="push">
				<visibleWhen
				      checkEnabled="false">
					<iterate>
						<adapt type="org.eclipse.core.resources.IProject">
         <test
               property="org.eclipse.core.resources.open"
               value="open">
         </test>
						</adapt>
					</iterate>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>

</plugin>
